@model UserResponse 

<h2 style="text-align: center;">FAST Equipment Request Form</h2>

<form asp-action="SaveResponse" method="post">
    
    <div asp-validation-summary="All"></div>

    <div class="form-group" class="mb-3" >
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" style="border-radius: 10px;">
    </div>
    
    <div class="form-group" style="margin-top: 10px;">
        <label asp-for="Name">Email</label>
        <input asp-for="Email" type="text" style="border-radius: 10px;">
    </div>

    <div class="form-group" style="margin-top: 10px">
        <label asp-for="Name">Phone Number</label>
        <input asp-for="PhoneNumber" type="text" style="border-radius: 10px;">
    </div>

    <div class="form-group" style="margin-top: 10px; ">
        <label asp-for="UserType">Select User</label>
        <select asp-for="UserType" style="border-radius: 10px;">
            <option value="Student">Student</option>
            <option value="Faculty">Faculty</option>
        </select>
    </div>

    <div class="form-group" style="margin-top: 10px">
        <label asp-for="EquipmentType">Select Equipment</label>
        <select asp-for="EquipmentType" style="border-radius: 10px;">
            <option value="Laptop">Laptop</option>
            <option value="Phone">Phone</option>
            <option value="Tablet">Tablet</option>
            <option value="Camera">Camera</option>
        </select>
    </div>

    <div class="form-group" style="margin-top: 10px">
        <label asp-for="RequestDetails">Reason for Borrowing</label>
        <textarea asp-for="RequestDetails" rows="2" class="form-control" style="border-radius: 10px; resize: none"></textarea>
    </div>

    <div class="form-group" style="margin-top: 10px">
        <label asp-for="Duration">Rental Duration</label>
        <input asp-for="Duration" type="number" style="border-radius: 10px; width: 50px; text-align: center" min="1" >
    </div>
</form>